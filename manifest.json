{
  "manifest_version": 2,
  "name": "Shorten Url",
  "description": "Shorten link with goo.gl",
  "author": "9fury",
  "version": "1.0",

  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },

  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*",
    "notifications",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking"
  ],

  "browser_action": {
    "default_icon": "icon/icon16.png",
    "default_popup": "popup.html"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://maxcdn.bootstrapcdn.com https://apis.google.com https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  }
}